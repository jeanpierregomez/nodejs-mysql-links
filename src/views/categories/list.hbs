<div class="container p-4">
    <div class="row">
        {{#each categories}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{title}}
                    </h3>
                    <a class="btn btn-danger" href="/categories/delete/{{id}}">
                        Delete Caregory
                    </a>
                    <a class="btn btn-secondary" href="/categories/edit/{{id}}">
                        Edit
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not categories saved yet.</p>
                <a href="/categories/add">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>